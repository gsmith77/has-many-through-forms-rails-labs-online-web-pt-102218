<%= form_for @post do |f| %>
  <p>
    <%= f.label "Title" %>
    <%= f.text_field :title %><br>
    </p>

    <p>
    <%= f.label "Content" %>
    <%= f.text_area :content %><br>
    </p>

    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name)  %>
      
    <%= f.fields_for :categories do |category_builder| %>
        <%= category_builder.text_field :name %>
    <% end %>
    <%= f.submit %>
  <% end %>

  