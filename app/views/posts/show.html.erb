<%= @post.title%>
<%= @post.content %>
<% @post.comments.each do |comment| %>
    <%= comment.content%>
<% end %>
<%= form_for @post do |f| %>
    <%= f.fields_for :comments, @post.comments.build do |comment_field| %>
        <%= comment_field.text_area :content %>
    <% end %>
    <%= f.collection_select(:user_ids, User.all, :id, :username) %>
<% end %>

